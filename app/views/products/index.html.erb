<p id="notice"><%= notice %></p>

<h1><%=t(:index, attribute: Product.model_name.human(count: 2)) %></h1>

<table>
  <thead>
    <tr>
      <th><%= Product.human_attribute_name(:machine_type) %></th>
      <th><%= Product.human_attribute_name(:brand) %></th>
      <th><%= Product.human_attribute_name(:product_nbr) %></th>
      <th><%= Product.human_attribute_name(:order_nbr) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.machine_type %></td>
        <td><%= product.brand %></td>
        <td><%= product.product_nbr %></td>
        <td><%= product.order_nbr %></td>
        <td><%= link_to t(:show), product %></td>
        <td><%= link_to t(:edit), edit_product_path(product) %></td>
        <td><%= link_to t(:destroy), product, method: :delete,
          data: { confirm: t(:confirm_destroy) } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to(t(:new, attribute: Product.model_name.human), new_product_path) %>
