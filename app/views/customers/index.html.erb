<div class ="container">
  <div class="row">
    <div class="col-md-12">
      <table class="table">
        <thead>
        <tr>
          <th>#</th>
          <th>Namn</th>
          <th>Telefon</th>
          <th>Mobil</th>
          <th>Epost</th>
          <th>Redigera</th>
        </tr>
        </thead>
        <tbody>
        <% @customers.each do |customer| %>
            <tr>
              <td><%= link_to(customer.id, customer_path(customer)) %></td>
              <td><%= link_to(customer, customer) %></td>
              <td><%= customer.phone %></td>
              <td><%= customer.cellphone %></td>
              <td><%= customer.email %></td>
              <td><%=link_to('Redigera', edit_customer_path(customer))%></td>
            </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
