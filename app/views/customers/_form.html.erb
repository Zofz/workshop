<%= simple_form_for(@customer, html: {class: 'form-horizontal form-company'}) do |f| %>
  <ul class='nav nav-tabs' role='tablist'>
    <li class='active'>
      <%= link_to('Kunduppgifter','#info', aria: { controls: 'info' }, role: 'tab', data: { toggle: 'tab' }) %>
    </li>
    <li>
      <%= link_to('Adresser','#addresses', aria: { controls: 'addresses' }, role: 'tab',  data: { toggle: 'tab' }) %>
    </li>
  </ul>
  <div class='tab-content'>
    <div id='info' class='tab-pane active' role='tabpanel'>
      <div class="form-inputs">
        <%= f.input :name, autofocus: true %>
        <%= f.input :lastname %>
        <%= f.input :phone %>
        <%= f.input :cellphone %>
        <%= f.input :email %>
        <%= f.input :old_id %>
        <%= f.association :company, collection: Company.all %>
      </div>
    </div>
    <div id='addresses' class='tab-pane' role='tabpanel'>
      <%= f.simple_fields_for :addresses do |address| %>
        <%= render 'addresses/fields', f: address %>
        <div class='links'>
          <%= link_to_add_association 'LÃ¤gg till address', f, :addresses %>
        </div>
      <%end%>
    </div>
  </div>


  <div class="form-group">
    <div class="col-md-offset-4 col-md-8">
      <%= f.button :submit, class: 'btn btn-primary' %>
    </div>
  </div>

<% end %>
