<div class="profile">
  <div class="container content">
    <div class="row">
      <!--Left Sidebar-->
      <div class="col-md-3 md-margin-bottom-40">
        <div class="panel-heading-v2 overflow-h">
          <h2 class="heading-xs pull-left"><i class="fa fa-bar-chart-o"></i> Task Progress</h2>
          <a href="#"><i class="fa fa-cog pull-right"></i></a>
        </div>
        <h3 class="heading-xs">Web Design <span class="pull-right">92%</span></h3>

        <div class="progress progress-u progress-xxs">
          <div style="width: 92%" aria-valuemax="100" aria-valuemin="0" aria-valuenow="92" role="progressbar" class="progress-bar progress-bar-u">
          </div>
        </div>
        <h3 class="heading-xs">Unify Project <span class="pull-right">85%</span></h3>

        <div class="progress progress-u progress-xxs">
          <div style="width: 85%" aria-valuemax="100" aria-valuemin="0" aria-valuenow="85" role="progressbar" class="progress-bar progress-bar-blue">
          </div>
        </div>
        <h3 class="heading-xs">Sony Corporation <span class="pull-right">64%</span></h3>

        <div class="progress progress-u progress-xxs margin-bottom-40">
          <div style="width: 64%" aria-valuemax="100" aria-valuemin="0" aria-valuenow="64" role="progressbar" class="progress-bar progress-bar-dark">
          </div>
        </div>
      </div>
      <!--End Left Sidebar-->

      <div class="col-md-9">
        <!--Profile Body-->
        <div class="profile-body margin-bottom-20">
          <div class="tab-v1">
            <ul class="nav nav-justified nav-tabs">
              <li class="active"><a data-toggle="tab" href="#profile">Uppgifter</a></li>
              <li><a data-toggle="tab" href="#passwordTab">Byta l√∂senord</a></li>
            </ul>
            <div class="tab-content">
              <div id="profile" class="profile-edit tab-pane fade in active">
                <%= simple_form_for(current_user,
                                    html: {class: "form-horizontal form-user"},
                                    wrapper: :with_devise) do |f| %>
                    <p class="notice"><%= notice %></p>
                    <p class="alert"><%= alert %></p>
                    <%= f.input :firstname %>
                    <%= f.input :lastname %>
                    <%= f.input :phone %>

                    <div class="form-group">
                      <div class="col-md-offset-4 col-md-8">
                        <%= f.button :submit, t('devise.update'), class: 'btn btn-primary' %>
                      </div>
                    </div>
                <% end %>
              </div>

              <div id="passwordTab" class="profile-edit tab-pane fade">
                <%= simple_form_for(current_user, url: registration_path(User),
                                    html: {class: "form-horizontal form-user"},
                                    wrapper: :with_devise) do |f| %>
                    <%= f.input :email, readonly: true %>
                    <%= f.input :password %>
                    <%= f.input :password_confirmation %>
                    <%= f.input :current_password %>

                    <div class="form-group">
                      <div class="col-md-offset-4 col-md-8">
                        <%= f.button :submit, t('devise.update'), class: 'btn btn-primary' %>
                      </div>
                    </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
        <!--End Profile Body-->
      </div>
    </div>
    <!--/end row-->
  </div>
  <!--/container-->
  <!--=== End Profile ===-->
</div>
