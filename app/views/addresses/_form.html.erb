<%= form_for(@customer, html: { autocomplete: 'off' }, remote: true) do |f| %>
    <%=render 'shared/form_errors', current: @customer%>
    <%= f.label 'Namn', class: 'reg-label'%>
    <div class="input-group margin-bottom-20 row">
      <div class="col-md-6"><%= f.text_field(:name, class: 'form-control',placeholder: :name)%></div>
      <div class="col-md-6"><%= f.text_field(:lastname, class:'form-control', placeholder: :lastname)%></div>
    </div>
    <%= f.label :phone, class: 'reg-label'%>
    <div class="input-group margin-bottom-20 row">
      <div class="col-md-6"><%= f.phone_field(:phone, class:'form-control',placeholder: :phone)%></div>
      <div class="col-md-6"><%= f.phone_field(:cellphone, class:'form-control',placeholder: :cellphone)%></div>
    </div>

    <%= f.label :email, class: 'reg-label'%>
    <div class="input-group margin-bottom-20">
      <%= f.email_field(:email, class:'form-control',placeholder: :email)%>
    </div>
    <div id="addresses">
      <%if !@customer.new_record? %>
        <%= link_to('LÃ¤gg till adress', new_customer_address_path(@customer), remote: true)%>
          <hr>
      <%end%>
    </div>
    <%= f.label :company, class: 'reg-label'%>
    <div class="input-group margin-bottom-20">
      <%= f.check_box(:company,id:'toggle-company')%>
    </div>
    <div id ="company" class="company hidden">
      <%= f.label :org_nbr, class: 'reg-label'%>
      <div class="input-group margin-bottom-20">
        <%= f.text_field(:org_nbr, class:'form-control',placeholder: :org_nbr)%>
      </div>
    </div>


    <div class="row">
      <%= f.submit(class: 'btn-u pull-right')%>
    </div>
<% end %>