<li class='dropdown'>
  <%= link_to(model_name(model),'', class: 'dropdown-toggle', data: {toggle: 'dropdown'}) %>
  <ul class='dropdown-menu'>
    <li><%= link_to(t(%(#{model.name.downcase}.new)),
                    url_for(action: :new, controller: '/'+model.name.tableize)) %></li>
    <li><%= link_to(t('index', attribute: model.model_name.human(count: 2).downcase),
                    url_for(action: :index, controller: '/'+model.name.tableize)) %></li>
  </ul>
</li>
