<div class='collapse navbar-collapse navbar-responsive-collapse'>
  <ul class='nav navbar-nav navbar-right'>
    <%= render 'elements/menu_element', model: Customer %>
    <%= render 'elements/menu_element', model: Machine %>
    <%= render 'elements/menu_element', model: Company %>

    <li class='dropdown'>
      <%= link_to t('constants'), '', class: 'dropdown-toggle',
                                      data: { toggle: 'dropdown' } %>
      <ul class='dropdown-menu'>
        <%= render 'elements/submenu', model: City %>
        <%= render 'elements/submenu', model: WorkType %>
        <%= render 'elements/submenu', model: Product %>
        <%= render 'elements/submenu', model: Brand %>
        <%= render 'elements/submenu', model: MachineType %>
      </ul>
    </li>
    <% if current_user.present? %>
      <li class='dropdown'>
        <%= link_to fa_icon('user') + ' ' + current_user.firstname ,
          '', class: 'dropdown-toggle', data: { toggle: 'dropdown' } %>
        <ul class='dropdown-menu'>
          <li><%= link_to t('user.settings'), edit_user_registration_path %></li>
          <li><%= link_to t('sign_out'), :destroy_user_session, method: :delete %></li>
        </ul>
      </li>
    <% end %>
  </ul>
</div>
