<div class="page-header">
  <h1><%=t('devise.sign_in', default: "Logga in")%></h1>
</div>
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name),
                    html: {class: "form-horizontal form-user"},
                    wrapper: :with_devise) do |f| %>
    <%= devise_error_messages! %>
    <%= f.input :email %>
    <%= f.input :password %>

    <div class="form-group">
      <div class="col-md-offset-4 col-md-8">
        <%= f.button :submit, t('devise.sign_in'), class: 'btn btn-primary' %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-md-offset-4 col-md-8">
        <%= render "devise/shared/links" %>
      </div>
    </div>
<% end %>
